{
  "name" : "YouTube GitHub Markdown Button",
  "short_name" : "#ytghmd",

  "version" : "8",
  "version_name" : "8 (pffy.cloud.farfalloni)",

  "description" : "The missing GitHub Markdown generator for YouTube.",

  "browser_action" :
  {
    "default_icon" : {
      "19": "icons/icon48.png",
      "38": "icons/icon48.png"
    },

    "default_title" : "#ytghmd",
    "default_popup" : "popup.html"
  },

  "icons" : {
    "16" : "icons/icon48.png",
    "19" : "icons/icon48.png",
    "32" : "icons/icon48.png",
    "38" : "icons/icon48.png",
    "48" : "icons/icon48.png",
    "128" : "icons/icon128.png"
  },

  "permissions": [
    "activeTab"
  ],

  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",

  "manifest_version": 2
}
